<section>
	<form id="my-form">
		<h2>Get In Touch Today</h2>
		<div class="form-group">
			<label for="name">Name</label>
			<input
				required
				type="text"
				id="name"
				name="name"
				placeholder="What do people call you?"
			/>
		</div>
		<div class="form-group">
			<label for="email">What's your email?</label>
			<input
				required
				type="email"
				id="email"
				name="email"
				placeholder="yourname@email.com"
			/>
		</div>
		<div class="form-group">
			<label for="contact">What's the best way to reach you?</label>
			<input
				type="text"
				id="contact"
				name="contact"
				placeholder="phone, email, name of your carrier pidgeon, ect. "
			/>
		</div>
		<div>
			<label for="message">What do you want to tell me?</label>
			<textarea
				id="message"
				name="message"
				rows="5"
				placeholder="The floor is yours!"></textarea>
		</div>
		<div class="check-box">
			<input type="checkbox" id="wants-to-meet" name="wants-to-meet" checked />
			<label for="wants-to-eat">I want to set up a meeting</label>
		</div>
		<button id="form-button">Send</button>
	</form>
</section>
