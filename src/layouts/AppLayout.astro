---
import {BaseHead, Footer, Header} from "../components/layout";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
const { id } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body id={id ?? "page"}>
		<Header client:only="solid-js" />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
